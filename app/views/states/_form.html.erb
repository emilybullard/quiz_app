<%= form_for(@state) do |f| %>

<% if @state.errors.any? %>

<div id="error_explanation">

<h2><%= pluralize(@state.errors.count, "error") %> prohibited this state from being saved:</h2>

 

<ul>

<% @state.errors.full_messages.each do |msg| %>

<li><%= msg %></li>

<% end %>

</ul>

</div>

<% end %>

<!-- No real changes to the field below, just added a line of direction to the user 'Enter a state:' -->

<div class="field">

Enter a state: <br />

<%= f.label :name %><br>

<%= f.text_field :name, :autofocus => true %>

<!-- :autofocus => true puts the cursor on that particular field when the page is loaded -->

</div>

<div class="actions">

<%= f.submit %>

</div>

<% end %>